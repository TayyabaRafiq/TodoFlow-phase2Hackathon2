# TodoFlow Environment Variables
# Copy this file to .env.local for local development
# Set these in Vercel dashboard for production deployment

# Demo mode (set to "false" to use real backend)
# For Vercel: Set to "true" for demo mode, or "false" if backend is deployed
NEXT_PUBLIC_DEMO_MODE=true

# API URL (required when DEMO_MODE is false)
# Local development: http://localhost:8000/api
# Production: https://your-backend-url.com/api (must be absolute URL)
NEXT_PUBLIC_API_URL=http://localhost:8000/api
