# TodoFlow Environment Variables
# Copy this file to .env.local and fill in the values

# Demo mode (set to "false" to use real backend)
NEXT_PUBLIC_DEMO_MODE=true

# API URL (only needed when DEMO_MODE is false)
NEXT_PUBLIC_API_URL=/api

# Auth URL (only needed when DEMO_MODE is false)
NEXT_PUBLIC_AUTH_URL=http://localhost:8000/api/auth

# Better Auth Secret (server-side only, for Phase 3+)
# BETTER_AUTH_SECRET=your-secret-here
