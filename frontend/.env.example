# TodoFlow Environment Variables
# Copy this file to .env.local for local development
# Set these in Vercel dashboard for production deployment

# Demo mode (set to "false" to use real backend)
NEXT_PUBLIC_DEMO_MODE=false

# API URL - Use relative path for production (Vercel proxies to HF Space)
# Local dev: http://localhost:8000/api
# Production: /api (same-origin via Vercel rewrites - prevents cookie blocking)
NEXT_PUBLIC_API_URL=/api

# Auth URL - Empty for production (same-origin), or backend URL for local dev
# Local dev: http://localhost:8000
# Production: (empty - uses same origin via proxy)
NEXT_PUBLIC_AUTH_URL=
